<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/material_dynamic_primary10">


    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:id="@+id/Card_Hight"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardGender"
            app:cardCornerRadius="19dp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#36BFF2">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="200dp"
                      android:layout_gravity="center"
                      android:padding="12dp"
                      android:layout_marginTop="20dp"
        >

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/Hight"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:id="@+id/txt_Hight">

            </TextView>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/seekBar_Hight"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:progress="150"
                    android:max="250"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="150"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:id="@+id/txt_seekBar"
            >

            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/cardGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#36BFF2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            tools:ignore="MissingConstraints">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:paddingBottom="10dp"

        >
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"

                    android:clickable="true"
                    android:focusable="true"

            >
                <ImageView android:layout_width="180dp"
                           android:layout_height="180dp"
                           android:src="@drawable/male_icon"
                           android:layout_marginLeft="10dp"
                           android:padding="10dp"

                           android:layout_gravity="center">
                </ImageView>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/male_icon"
                          android:text="Male"
                          android:textColor="@color/white"
                          android:layout_gravity="center"

                >
                </TextView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ly_female"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"

                >
                    <ImageView
                            android:layout_height="180dp"
                            android:layout_width="180dp"
                            android:src="@drawable/icon_female"
                            android:padding="10dp"
                            android:layout_marginLeft="2dp"
                    >

                    </ImageView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:text="Female"
                              android:id="@+id/female_icon"
                              android:textColor="@color/white"
                    >

                    </TextView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/Card_Hight"
            android:layout_marginTop="13dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="#36BFF2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="250dp"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:padding="20dp"


        >
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginRight="20dp"

            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txt_Weight"
                          android:text="Weight"
                          android:textSize="22sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:textColor="@color/white"
                          android:textColorLink="@color/design_default_color_primary_dark">

                </TextView>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/value_Of_Weight"
                          android:text="60"
                          android:textSize="22sp"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:layout_gravity="center"
                          android:layout_marginTop="8dp"
                ></TextView>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <Button
                            android:id="@+id/decrementWeight"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="−"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif"
                            android:backgroundTint="#17789D"> <!-- Use a standard sans-serif font -->


                    </Button>
                    <Button
                            android:id="@+id/increasmentWeight"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="+"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif"
                            android:backgroundTint="#17789D"> <!-- Use a standard sans-serif font -->


                    </Button>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical"

            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txt_Age"
                          android:text="Age"
                          android:textColor="@color/white"
                          android:textSize="22sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:textColorLink="@color/design_default_color_primary_dark">

                </TextView>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/value_Of_Age"
                          android:text="10"
                          android:textSize="22sp"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:layout_gravity="center"
                          android:layout_marginTop="8dp"
                ></TextView>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <Button
                            android:id="@+id/decrementAge"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="−"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif"
                            android:backgroundTint="#17789D"> <!-- Use a standard sans-serif font -->


                    </Button>
                    <Button
                            android:id="@+id/increasmentAge"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="+"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif"
                            android:backgroundTint="#17789D"> <!-- Use a standard sans-serif font -->


                    </Button>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"


            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/Calculate"
            android:textColorLink="#36BFF2"
            android:backgroundTint="#36BFF2" android:id="@+id/btn_result"
            tools:layout_editor_absoluteX="-50dp" android:layout_marginBottom="4dp">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>


